    demo += "2: " + _np(2, "coin", "coins_dual", "coins_plural") + "\n";
    demo += "5: " + _np(5, "coin", "coins_dual", "coins_plural") + "\n";
    demo += "10: " + _np(10, "coin", "coins_dual", "coins_plural") + "\n";
    demo += "15: " + _np(15, "coin", "coins_dual", "coins_plural") + "\n";
    
